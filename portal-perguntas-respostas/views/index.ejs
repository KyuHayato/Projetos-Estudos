<%- include partials/header.ejs %>

    <body>
        <%- include partials/navbar.ejs %>
            <div class="container">
                <h1 class="mb-2">Perguntas</h1>
                <a href="/perguntar" class="btn btn-primary mb-2">Perguntar</a>
                <% perguntas.forEach(pergunta=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= pergunta.titulo %>
                            </h5>
                            <p class="card-text">
                                <%= pergunta.descricao %>
                            </p>
                        </div>
                        <div class="card-footer">
                           <a href="/pergunta/<%= pergunta.id%>"> <button class="btn btn-primary">Responder</button></a>
                        </div>
                    </div>
                    <% }) %>
            </div>
    </body>
    <%- include partials/footer.ejs %>